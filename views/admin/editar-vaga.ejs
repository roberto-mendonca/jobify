<%- include('header') %>

    <div>    
        <h2>Editar vaga</h2>
        <a href="/admin/vagas"><< Voltar</a>
    </div>

    <div>    
        <form method="POST">
            <label>Título:</label>
            <input type="text" id="titulo" name="titulo" value="<%= vaga.titulo %>" required>

            <label for="descricao">Descrição:</label>
            <textarea id="descricao" name="descricao" required><%= vaga.descricao %></textarea>

            <label for="categoria">Categoria:</label>
            <select id="categoria" name="categoria">
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>" <% if (vaga.categoria === categoria.id) { %> selected <% } %>> <%= categoria.categoria %></option>
                <% }) %>
            </select>

            <button type="submit">Salvar</button>
        </form>
    </div>

<%- include('footer') %>